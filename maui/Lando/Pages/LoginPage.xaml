<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="Lando.LoginPage"
              xmlns:local="clr-namespace:Lando"
              local:ViewModelLocator.AutoWireViewModel="true"
              Shell.NavBarIsVisible="false"
              xmlns:pagemodels="clr-namespace:Lando.PageModels"
              xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
              x:DataType="pagemodels:LoginPageModel">
    <ContentPage.Content>
        <StackLayout x:Name="stack">
            <Label Text="{Binding}"/>
            <Button Text="Login"
                    Command="{Binding LoginCommand}" />

            <WebView HeightRequest="500"
                     Navigated="Webview_Navigated"
                     Navigating="Webview_Navigating"
                     HandlerChanged="Webview_HandlerChanged"
                     Source="{Binding BrowserSource}">
            </WebView>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>